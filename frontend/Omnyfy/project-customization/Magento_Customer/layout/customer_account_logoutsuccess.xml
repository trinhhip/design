<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="page.main.title">
                <action method="setPageTitle">
                    <argument name="title" translate="true" xsi:type="string">You have now signed out</argument>
                </action>
            </referenceBlock>
            <block class="Magento\Cms\Block\Block" name="logout-image" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">logout-page-image</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
